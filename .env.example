# JupyterHub Metrics - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the .env file to version control

# ============================================================================
# DATABASE CONFIGURATION (TimescaleDB/PostgreSQL)
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jupyterhub_metrics
DB_USER=metrics_user
DB_PASSWORD=changeme_secure_password_here

# ============================================================================
# GRAFANA CONFIGURATION
# ============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password_here
GRAFANA_PORT=3000

# ============================================================================
# COLLECTOR SERVICE CONFIGURATION
# ============================================================================
# Interval in seconds between metric collections
COLLECTION_INTERVAL=300

# Kubernetes context to use (for kubectl commands)
KUBECTL_CONTEXT=cori-prod

# Kubernetes namespace where JupyterHub is deployed
NAMESPACE=jupyterhub

# ============================================================================
# KUBERNETES DEPLOYMENT (Optional - used by k8s/deploy.sh)
# ============================================================================
# Namespace for this deployment
K8S_NAMESPACE=jupyterhub-metrics

# Storage size for TimescaleDB
TIMESCALEDB_STORAGE_SIZE=100Gi

# Storage size for Grafana
GRAFANA_STORAGE_SIZE=10Gi

# Ingress hostname for Grafana access
INGRESS_HOST=grafana.example.com

# Pod label selector for monitoring (optional)
POD_LABEL_SELECTOR=

# ============================================================================
# INFLUXDB CONFIGURATION (Optional - for migration scripts only)
# ============================================================================
# Full URL including protocol and port
# Examples:
#   INFLUX_URL=https://ncsa-influxdb.ncsa.illinois.edu:8086
#   INFLUX_URL=http://localhost:8086
INFLUX_URL=https://ncsa-influxdb.ncsa.illinois.edu:8086
INFLUX_USER=admin
INFLUX_PASSWORD=changeme
INFLUX_DATABASE=telegraf
# Set to false to skip SSL certificate verification (for self-signed certs)
INFLUX_VERIFY_SSL=true
